# OpenClaw LXD VM — non-secret settings
# 1. Copy this file to state/settings.env and fill in values.
# 2. Copy config/openclaw.secrets.env.example to state/openclaw.secrets.env and fill in secrets.
# Do not commit state/settings.env or state/openclaw.secrets.env.

# VM
VM_NAME=openclaw-vm
# Ubuntu 24.04 LTS; use ubuntu remote (cloud-images.ubuntu.com) with version number
VM_IMAGE=ubuntu:24.04
VM_CPU=6
VM_MEM=12GiB
VM_DISK=60GiB

# OpenClaw ports (host proxy will bind these on 127.0.0.1)
OPENCLAW_PORT=18789
OPENCLAW_BRIDGE_PORT=18790

# OpenClaw repo — pin to a tag or commit for reproducibility
OPENCLAW_GIT_URL=<repo-url>
OPENCLAW_GIT_REF=<tag-or-commit>

# Snapshot and export
SNAPSHOT_NAME=clean
EXPORT_AFTER_SETUP=false

# Firewall (UFW)
UFW_ENABLE=false

# Optional: HTTP/HTTPS proxy for the VM (e.g. corporate proxy). Leave empty if not behind a proxy.
# Used by apt and curl inside the VM. Format: http://proxy.example.com:3128 or https://...
VM_HTTP_PROXY=
VM_HTTPS_PROXY=
